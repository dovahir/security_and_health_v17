<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_employee_pressure_form" model="ir.ui.view">
        <field name="name">Employee Pressure Form</field>
        <field name="model">employee.pressure</field>
        <field name="arch" type="xml">
            <form string="Registro de presión">
                <sheet>
                    <group>
                        <field name="employee_id" options="{'no_create': True}"/>
                        <field name="record_date"/>
                        <label for="blood_pressure_systolic" string="Presión Arterial (mmHg)"/>
                        <div>
                            <span><strong>Sistólica:</strong></span>
                            <field name="blood_pressure_systolic" class="oe_inline" required="1"/>
                            <span><strong>Diastólica:</strong></span>
                            <field name="blood_pressure_diastolic" class="oe_inline" required="1"/>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_employee_pressure_list" model="ir.ui.view">
        <field name="name">Employee Health List</field>
        <field name="model">employee.pressure</field>
        <field name="arch" type="xml">
            <list string="Registros diarios de presión">
                <field name="employee_id"
                       widget="many2one_avatar_user"/>
                <field name="record_date"/>
                <field name="blood_pressure_systolic"/>
                <field name="blood_pressure_diastolic"/>
            </list>
        </field>
    </record>

    <record id="view_employee_pressure_search" model="ir.ui.view">
        <field name="name">Security Attention Search</field>
        <field name="model">employee.pressure</field>
        <field name="arch" type="xml">
            <search string="Buscar empleado">
                <field name="employee_id"/>

                <separator/>
                <filter name="record_date" string="Fecha" date="record_date"/>
                <separator/>

                <group>
                    <filter name="group_by_employee" string="Empleado"
                            context="{'group_by': 'employee_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_employee_pressure_daily" model="ir.actions.act_window">
        <field name="name">Registros diarios de presión</field>
        <field name="res_model">employee.pressure</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>