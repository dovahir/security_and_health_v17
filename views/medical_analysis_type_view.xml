<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_medical_analysis_type_form" model="ir.ui.view">
        <field name="name">Medical Analysis Type Form</field>
        <field name="model">medical.analysis.type</field>
        <field name="arch" type="xml">
            <form string="Configurar Tipo de Análisis">
                <sheet>
                    <div vlass="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Ej. Biometría Hemática"/></h1>
                    </div>
                    <group>
                        <field name="parameter_ids" widget="many2many_tags" placeholder="Selecciona los parámetros que lleva este análisis..."/>
                    </group>
                    <p class="text_muted">
                        Los parámetros seleccionados aquí aparecerán automáticamente como líneas vacías
                        cuando se cree un nuevo análisis de este tipo.
                    </p>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_medical_analysis_type" model="ir.actions.act_window">
        <field name="name">Tipos de Análisis (Plantillas)</field>
        <field name="res_model">medical.analysis.type</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>