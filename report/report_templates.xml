<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_final_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">

                            <h3>Informe de Situación de Seguridad: <span t-field="doc.security_situation_id.name"/></h3>
                            <p><strong>Fecha de Reporte:</strong> <span t-field="doc.create_date" t-options='{"widget": "date"}'/></p>
                            <p><strong>Supervisor SSMA:</strong> <span t-field="doc.supervisor_ssma"/></p>

                            <hr/>
                            <h4>Detalles del Evento</h4>

                            <p>
                                <strong>Fecha y Hora del Evento: </strong><span t-field="doc.security_situation_id.event_date" t-options='{"widget": "datetime"}'/>
                            </p>
                            <table class="table table-sm table-borderless" style="width: 100%;">
                                <tr>
                                    <td><strong>Tipo de tarea: </strong><span t-field="doc.security_situation_id.activity_type_id"/></td>
                                    <td><strong>Ubicacion de Trabajo:</strong><span t-field="doc.security_situation_id.work_center_id.name"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Tipo de situación: </strong><span t-field="doc.security_situation_id.type"/></td>
                                    <td><strong>Área / Lugar Exacto:</strong><span t-field="doc.security_situation_id.work_area_id.name"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Severidad: </strong><span t-field="doc.security_situation_id.event_severity"/></td>
                                    <td><strong>Empleado Involucrado: </strong><span t-field="doc.security_situation_id.employee_id.name"/></td>
                                </tr>
                                <t t-if="doc.security_situation_id.type == 'accident'">
                                <tr>
                                    <td><strong>Tipo de Lesión:</strong><span t-field="doc.security_situation_id.injury_type_id.name"/></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td><strong>Severidad de la Lesión:</strong><span t-field="doc.security_situation_id.injury_severity"/></td>
                                    <td></td>
                                </tr>
                                </t>
                            </table>
                            <p>
                                <strong>Descripción del Evento:</strong><br></br>
                                <span t-field="doc.security_situation_id.details"/>
                            </p>

<!--                            <h4>Información del empleado</h4>-->
<!--                            <p>-->
<!--                                <strong>Puesto de trabajo: </strong><span t-field="doc.security_situation_id.job_id"/><br></br>-->
<!--                                <strong>Departamento:</strong><span t-field="doc.security_situation_id.department_id"/><br></br>-->
<!--                                <strong>Líder Directo:</strong><span t-field="doc.security_situation_id.parent_id"/><br></br>-->
<!--                            </p>-->

                            <hr/>

                            <h4>Situación Médica y Laboral</h4>

                            <p>
                                <strong>Investigador: </strong><span t-field="doc.investigator"/>
<!--                                <strong>Diagnostico: </strong><span t-field="doc.medic_diagnostic"/><br></br>-->
<!--                                <strong>Tratamiento médico: </strong><span t-field="doc.medical_treatment"/><br></br>-->
<!--                                <strong>Tipo de atención: </strong><span t-field="doc.attention_type"/><br></br>-->
<!--                                <strong>Estado laboral: </strong><span t-field="doc.actual_laboral_state"/><br></br>-->
<!--                                <strong>Días de incapacidad: </strong><span t-field="doc.given_days"/><br></br>-->
<!--                                <strong>Fecha de regreso: </strong><span t-field="doc.return_activities_date" t-options='{"widget": "date"}'/><br></br>-->
                            </p>

                            <table class="table table-sm table-borderless" style="width: 100%;">
                                <tr>
                                    <td><strong>Diagnostico: </strong><span t-field="doc.medic_diagnostic"/></td>
                                    <td><strong>Estado laboral: </strong><span t-field="doc.actual_laboral_state"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Tratamiento médico: </strong><span t-field="doc.medical_treatment"/></td>
                                    <td><strong>Días de incapacidad: </strong><span t-field="doc.given_days"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Tipo de atención: </strong><span t-field="doc.attention_type"/></td>
                                    <td></td>
                                </tr>
                            </table>

                            <p>
                                <strong>Fecha de regreso: </strong><span t-field="doc.return_activities_date" t-options='{"widget": "date"}'/>
                            </p>

                            <hr/>

                            <h4>Comentarios finales</h4>
                            <p><span t-field="doc.final_summary"/></p>

                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>