<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_work_location_form_inherit_areas" model="ir.ui.view">
        <field name="name">hr.work.location.form.inherit.areas</field>
        <field name="model">hr.work.location</field>
        <field name="inherit_id" ref="hr.hr_work_location_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page string="Ãreas">
                        <field name="area_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <record id="view_work_area_tree" model="ir.ui.view">
        <field name="name">Work Area Tree</field>
        <field name="model">hr.work.location</field>
        <field name="arch" type="xml">
            <tree string="Ubicaciones de Trabajo">
                <field name="name" readonly="1"/>
                <field name="num_areas" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="action_work_area" model="ir.actions.act_window">
        <field name="name">Ubicaciones y Areas de Trabajo</field>
        <field name="res_model">hr.work.location</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>